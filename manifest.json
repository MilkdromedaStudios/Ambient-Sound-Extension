{
  "manifest_version": 3,
  "name": "myNoise Tiny Controller",
  "version": "1.0.0",
  "description": "Open myNoise generators in a tiny window and auto-click Play.",
  "permissions": [
    "storage",
    "tabs",
    "windows"
  ],
  "host_permissions": [
    "https://mynoise.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "myNoise Tiny Controller"
  },
  "content_scripts": [
    {
      "matches": ["https://mynoise.net/NoiseMachines/*"],
      "js": ["autoplay.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
